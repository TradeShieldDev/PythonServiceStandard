    "version": "0.2.0",
    "configurations": [

        {
            "name": "FastAPI (Uvicorn)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            // In "args", specify main:app plus any flags you need
            "args": [
              "main:app",
              "--host",
              "127.0.0.1",
              "--port",
              "8181",
              "--reload"
            ],
            "console": "integratedTerminal"
        }
    ]
}